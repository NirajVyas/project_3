<a href="" class="button expand"><%= notice %></a>

<p id="notice"><%= notice %></p>

<div id="modal">


<div id="blog_title"><p>
  <h2><%= @blog.title %></h2>
</p>
</div>

<div class="blog_date">  <p>
  <hr><h3><%= @blog.date %></h3>
</p>
</div>

<div id="blog_description1">  <p>
  <h1><%= @blog.description %></h1></p>
</div>

<div class= "edit_blog">
<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %> |
<%= link_to 'New Post', new_blog_post_path(@blog) %>
</div>

</div>
<hr>
<% @posts.each do |post| %>

<div class="modal">
    <header>
      <p><h1> <%= post.title %> - <%= post.date %></h1> </p>
    </header>
      <section>

       <div class="user_location"><%= post.location %> (Click to view map)</div> 

   <div class="google_map_location">
      <% if post.location %>
        <img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= post.latitude %>,<%= post.longitude %>&zoom=11&size=400x400">
      <% end %>
   </div>
   
   </section>     

</div>

<div class="modal_post">
    <header>
      <p><h1>   <p> <%= post.stayed %></p></h1> </p>
    </header>
</div>

<div class="modal_post">
    <header>
      <p><h1> </h1> </p>
    </header>
      <section>
        <p><%= post.body %></p>
      </section>
</div>

<div class="modal_post">
  
      <section>
        
  <% post.images.each do |image| %>
    <ul class="lb-album">
        <li>
            <a href="#image-1">
                <img src="<%= image.photo_file %>" alt="image01">
                <span><%= @blog.title %></span>
            </a>
            <div class="lb-overlay" id="image-1">
                <img src="<%= image.photo_file %>" alt="image01" />
                <div>
                    <h3><%= @blog.title %> </h3>
                    <p>DESCRIPTION!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!</p>
                    <a href="#image-10" class="lb-prev">Prev</a>
                    <a href="#image-2" class="lb-next">Next</a>
                </div>
                <a href="#page" class="lb-close">x Close</a>
            </div>
        </li>
    </ul>
  <% end %>

      </section>
</div>




<div class="modal_post">
   
      <section style="text-align: center;">
        <% if post.video %>
          <iframe id="player" type="text/html" width="640" height="390" src="http://www.youtube.com/embed/<%= post.video.uid %>" frameborder="0"></iframe>
        <% end %>
      </section>
</div>

<div class="modal_post">
  
      <section>
    

      <div class="comments_container" style= "text-align: center"> Comments  </div>

      <div class="slider" style="display: none;">
        <div class="hide_comments">

          <%= form_for build_comment_for_post(post), remote: true do |f| %>
            <%= f.hidden_field :commentable_type %>
            <%= f.hidden_field :commentable_id %>
            <%= f.text_area :body, :rows => 3, :placeholder => "Comment" %>

            <%= f.submit %>
          <% end %>

          <div class='comments'>
            <%= render post.root_comments.reverse_order %>
          </div>
        </div>
      </div>        

      </section>
</div>


<div class="edit_blog_post">
   <%= link_to 'Edit Post', edit_blog_post_path(@blog, post) %> 
</div>

<div class="edit_blog_post">
<%= link_to 'Delete Post', [@blog, post], method: :delete, data: { confirm: 'Are you sure?' } %></div>



  <hr style="height:3px;border:none;color:#333;background-color:#333;" />

<% end %>

