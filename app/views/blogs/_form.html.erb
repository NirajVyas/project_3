<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.text_field :date, :placeholder => "Date" %>

    <%= f.text_field :title, :placeholder => "Title" %>

    <%= f.text_area :description, :rows => "5", :cols => 10, :placeholder => "Description" %>
    
  <div class="row">

  <div class="large-6 columns">
  <label>Blog:</label>
    <%= label :public, "Public" %>
    <%= f.radio_button :public, true , :checked => true , :value => true %>

    <%= label :public, "Private"%>
    <%= f.radio_button :public, false, :value => false %>
  </div>
</div>
<div id="blog_comments">
   <b>Comments:</b>
    <%= label :comments, "Allow" %>
    <%= f.radio_button :comments, true , :checked => true , :value => true %>
    <%= label :comments, "Disable"%>
    <%= f.radio_button :comments, false, :value => false %>
</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


