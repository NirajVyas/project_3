<!DOCTYPE html>
<html>
<head>
  <title>Travel Blogger</title>
  
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>



<%= auto_discovery_link_tag :atom, "/feed" %>
<%= auto_discovery_link_tag :rss, "/feed.rss" %>

<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>



  <%= csrf_meta_tags %>
<link href='http://fonts.googleapis.com/css?family=Roboto+Condensed' rel='stylesheet' type='text/css' />
<link href='http://fonts.googleapis.com/css?family=Gentium+Basic:700' rel='stylesheet' type='text/css'>
<script src="https://www.google.com/jsapi"></script>
<script src="https://www.youtube.com/iframe_api"></script>
  
</head>

<body>

    <nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">

      <% if current_user %>
        <h1>Logged in as <%= current_user.email %></h1>
      <% else %>
      <h1><a href="#">Travel Blogger</a></h1>
    </li>
      <% end %>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">

    <% if current_user %>
          <li class="active"><%= link_to "Log out", destroy_user_session_path, method: :delete %>
    <% else %>
      <li class="active"><a href="#" onclick="lightbox_open();">Sign Up</a></li>
       <div id="light">
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div id="name"> <%= f.label :name %><br />
          <%= f.text_field :name, :placeholder => "Name" %> </div>

          <div id="email"><%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %></div>

          <div id="password"><%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %></div>

          <div id="password_confirmation"><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

          <div id="signupbutton"><%= f.submit "Sign up" %></div>
         <% end %>
      </div>

    <% end %>
      <li class="has-dropdown">
    <% if current_user %>

      <a href="<%= edit_user_registration_path %>">Settings</a>

    <% else %>
        <a href="#" onclick="lightbox_open();">Login</a>
        <div id="light">
          <div class="signin-form">
            <h2>Sign in</h2>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div id="signin-email"><%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true %></div>

                <div id="signin-password"><%= f.label :password %><br />
                  <%= f.password_field :password, autocomplete: "off" %></div>

                <% if devise_mapping.rememberable? -%>
                  <div id="signin-checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                <% end %>
                <div id="signin-signin"><%= f.submit "Sign in" %></div>
              <% end %>
          </div>
        </div>

        <div id="fade" onClick="lightbox_close();"></div> 
    <% end %>
        <ul class="dropdown">
          <li><a href="#">First link in dropdown</a></li>
        </ul>
      </li>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
        <% if current_user %>
            <li><a href="<%= root_path %>">Dashboard</a></li>
            <li><a href="<%= blogs_path %>">Blogs</a></li>
            <li><a href="<%= profiles_index_path %>">Bloggers</a></li>
            <li><a href="<%= forem_path %>">Forum</a></li>
          </ul>
      <% end %> 
  </section>



<div class='login'>
  <% if current_user %>
 
        <div id="sign-out-button"> Sign Out </div>

  <% else %>      

  </div>
</nav>


</div>


<div id="slideshow">
   <div>
     <img src="http://capeflyer.com/wp/wp-content/uploads/2013/03/beach_slider.png">
   </div>
   <div>
     <img src="http://www.surfcoastnews.com.au/wp-content/uploads/2010/09/ptRoadknight02-250.jpg">
   </div>
   <div>
     <img src="http://www.hawaiigaga.com/Images/attractions/kiahuna-beach-b1.jpg">
   </div>
</div>

  <script>

  $("#slideshow > div:gt(0)").hide();

setInterval(function() { 
  $('#slideshow > div:first')
    .fadeOut(1000)
    .next()
    .fadeIn(1000)
    .end()
    .appendTo('#slideshow');
},  3000);

</script>

<div class="home_page_images">
    <a class="th [radius]" href="#">
      <img src="http://www.igaurisolutions.com/wp-content/uploads/Mobile-Friendly-Website-Makeover-300x300.jpg">
    </a>

    <a class="th [radius]" href="#">
      <img src="http://www.magma.geos.vt.edu/vtso/2011/0823-louisa/google-maps-thumbnail.png">
    </a>

    <a class="th [radius]" href="#">
      <img src="http://pcluv.com/wp-content/uploads/2012/12/Capture-1.png">
    </a>

    <a class="th [radius]" href="#">
      <img src="http://vizibility.net/blog/wp-content/uploads/2011/02/privacy-settings.jpg">
    </a>
</div>

  <% end %>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

<%= yield %>

<div id="footer"> 
  <div id="social_icons">
    <%= link_to(image_tag("Twitter.png", :alt => "home image", :width => 43, :height => 43, :title => "Click here to return to Home")) %>
    <%= link_to(image_tag("Facebook.png", :alt => "home image", :width => 43, :height => 43, :title => "Click here to return to Home")) %>
    <%= link_to(image_tag("GooglePlus.png", :alt => "home image", :width => 43, :height => 43, :title => "Click here to return to Home")) %>
  </div>
 </div>

</body>
</html>
