<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Date</th>
    <th>Stayed</th>
    <th>Tags</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>

    <td><%= post.title %></td>
    <td><%= post.location %></td>
    <td><%= post.date %></td>
    <td><%= post.stayed %></td>
    <td><%= post.tags %></td>
    <td><%= post.body %></td>
    <td><%= link_to 'Show', blog_post_path(@blog, post) %></td>
    <td><%= link_to 'Edit', edit_blog_post_path(@blog, post) %></td>
    <td><%= link_to 'Destroy', [@blog, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_blog_post_path(@blog) %>
