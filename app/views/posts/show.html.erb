<p id="notice"><%= notice %></p>
<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Location:</b>
  <%= @post.location %>
</p>

<p>
  <b>Date:</b>
  <%= @post.date %>
</p>

<p>
  <b>Stayed:</b>
  <%= @post.stayed %>
</p>

<p>
  <b>Tags:</b>
  <%= @post.tags %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<div id="comments">
  <% render :partial => @post.comments %>
</div>

<%= form_for [@post, Comment.new], :remote => true do |f| %>
    <%= f.label :body, "new comment" %> <br />
    <%= f.text_Area :body %><br />
  <%= f.submit "Add Comment" %>
<% end %>

