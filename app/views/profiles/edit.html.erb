<%= form_for current_user, url: profile_path, method: :put do |f| %>

  <div class="field">
    <%= f.label :display_name %><br />
    <%= f.text_field :display_name %>
  </div>
  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio,  :maxlength => 500 %>
  </div>

   <div><%= label :public, "Public" %>
      <%= f.radio_button :public, true , :checked => true , :value => true %></div>

  <br>
  <div><%= label :public, "Private"%>
       <%= f.radio_button :public, false, :value => false%></div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>