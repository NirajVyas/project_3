<h1>Sessions#new</h1>
<p>Find me in app/views/sessions/new.html.erb</p>

<%= form_tag "/sessions/create" do %>

<%= label_tag :email %>
<%= email_field_tag :email, params[:email] %>

<%= label_tag :password %>
<%= password_field_tag :password, params[:password] %>
  
<%= submit_tag "Login", :class => "btn btn-primary" %>

<% end %>